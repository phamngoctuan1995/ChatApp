<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/imv_card_avatar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_notification"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_card_name"
                android:layout_toRightOf="@+id/imv_card_avatar"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:text="Name"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_card_nickname"
                android:layout_toRightOf="@+id/imv_card_avatar"
                android:layout_below="@+id/tv_card_name"
                android:text="Nickname"
                android:layout_marginBottom="3dp"
                android:maxLines="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_numfollow"
                android:layout_below="@+id/tv_card_nickname"
                android:layout_toRightOf="@+id/imv_card_avatar"
                android:id="@+id/imv_card_numfollow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_card_numfollow"
                android:layout_toRightOf="@+id/imv_card_numfollow"
                android:layout_below="@+id/tv_card_nickname"
                android:text="100"
                android:layout_marginLeft="5dp"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imb_card_follow"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_unfollow"
                android:scaleType="centerInside"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_card_status"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_card_nickname"
                android:text="Online"
                android:textSize="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>